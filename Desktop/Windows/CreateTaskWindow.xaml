<Window x:Class="Desktop.Windows.CreateTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Desktop.Windows"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        mc:Ignorable="d"
        Title="CreateTaskWindow" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel 
            Grid.Column="0" 
            Grid.Row="0"
            Orientation="Vertical" 
            Margin="40, 45, 0, 0">
            
            <TextBlock 
                Text="Название" 
                Margin="0, 0, 0, 10"
                FontSize="24" 
                Style="{StaticResource CustomFontTextBlock}"/> 
            <TextBox
                Name="EnterTitleTextBox"
                HorizontalContentAlignment="Stretch"
                Padding="16"
                BorderBrush="White"
                BorderThickness="2"
                FontSize="16"
                Style="{StaticResource CustomFontTextBox}">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <TextBlock 
                Name="ErrorMessageTitle"
                Text=""
                Foreground="Red"
                Margin="1, 1, 0, 0"/>
        </StackPanel>
        
        <StackPanel 
            Grid.Column="0" 
            Grid.Row="1" 
            Orientation="Vertical" 
            Margin="40, 32, 0, 0">
            
            <TextBlock 
                Text="Категория" 
                Margin="0, 0, 0, 10"
                FontSize="24" 
                Style="{StaticResource CustomFontTextBlock}"/> 
            <TextBox
                Name="EnterCategoryTextBox"
                HorizontalContentAlignment="Stretch"
                Padding="16"
                BorderBrush="White"
                BorderThickness="2"
                FontSize="16"
                Style="{StaticResource CustomFontTextBox}">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <TextBlock 
                Name="ErrorMessageCategory"
                Text=""
                Foreground="Red"
                Margin="1, 1, 0, 0"/>
        </StackPanel>
        
        <StackPanel 
            Grid.Column="0" 
            Grid.Row="2" 
            Orientation="Vertical" 
            Margin="40, 24, 0, 0" >
            <TextBlock 
                Text="Описание" 
                Margin="0, 0, 0, 10"
                FontSize="24" 
                Style="{StaticResource CustomFontTextBlock}"/> 
            <TextBox 
                Name="EnterContentTextBox"
                HorizontalContentAlignment="Stretch"
                Padding="16"
                VerticalScrollBarVisibility="Auto"
                TextWrapping="Wrap"
                BorderBrush="White"
                BorderThickness="2"
                FontSize="16"
                Style="{StaticResource CustomFontTextBox}">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <TextBlock 
                Name="ErrorMessageContent"
                Text=""
                Foreground="Red"
                Margin="1, 1, 0, 0"/>
        </StackPanel>
        
        <WrapPanel
            Grid.Column="0"
            Grid.Row="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="30, 0, 20, 20" >
            
            <Button
                Name="CreateTaskButton"
                HorizontalAlignment="Center"
                Height="48"
                Width="350"
                Background="#50AF54"
                Content="Создать"
                FontSize="18"
                Foreground="White"
                Style="{StaticResource CustomFontContentButton}"
                Click="CreateTaskButton_OnClick">
                
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"></Setter>
                    </Style>
                </Button.Resources>
                
            </Button>
        </WrapPanel>
        
        <StackPanel 
            Grid.Row="0" 
            Grid.Column="1" 
            Grid.RowSpan="2" 
            Orientation="Vertical"
            VerticalAlignment="Center"
            Margin="16 46 16 16">
            
            <DatePicker
                Name="EnterDate"
                Text=""
                VerticalAlignment="Center"
                HorizontalContentAlignment="Stretch"
                BorderBrush="White"
                BorderThickness="2"/>
            <TextBlock 
                Name="ErrorMessageDate"
                Text=""
                Foreground="Red"
                Margin="1, 1, 0, 0"/>
        </StackPanel>
        
        <StackPanel 
            Grid.Row="1" 
            Grid.Column="1"
            Grid.RowSpan="2"
            Margin="16 0 16 0"
            Orientation="Vertical"
            VerticalAlignment="Center" >
            
            <TextBlock 
                Text="Время" 
                Margin="0, 0, 0, 10"
                FontSize="24" 
                Style="{StaticResource CustomFontTextBlock}"/> 
            <TextBox
                Name="EnterTimeTextBox"
                HorizontalContentAlignment="Stretch"
                Padding="16"
                BorderBrush="White"
                BorderThickness="2"
                FontSize="16"
                Style="{StaticResource CustomFontTextBox}">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <TextBlock 
                Name="ErrorMessageTime"
                Text=""
                Foreground="Red"
                Margin="1, 1, 0, 0"/>
        </StackPanel>
        
        <WrapPanel 
            Grid.Row="3" 
            Grid.Column="1" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center"
            Margin="30, 0, 20, 20">
            
            <Button 
                Name="CancelButton"
                Height="48"
                Width="327"
                Background="Red"
                Content="Отмена"
                FontSize="18"
                Foreground="White"
                Style="{StaticResource CustomFontContentButton}"
                Click="CancelButton_OnClick">
                
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"></Setter>
                    </Style>
                </Button.Resources>
                
            </Button>
        </WrapPanel>
    </Grid>
</Window>
